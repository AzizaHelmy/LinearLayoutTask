<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinearLayoutTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="customRoundedImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="TextStyleName">
        <item name="android:layout_marginBottom">@dimen/marginSmall</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>
    <style name="TextStyleName.TextStyleJob">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textSize">@dimen/textSizeMeduim</item>
    </style>
    <style name="TextStyleName.TextStyleReview">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/textSizeMeduim</item>
    </style>
    <style name="TextStyleName.TextStyleReview.TextStyleLocation">
        <item name="android:textColor">@color/blue_300</item>
    </style>
    <style name="TextStyleName.TextStyleReview.TextStyleRate">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>
</resources>